source "https://rubygems.org"
# Obs: Após salvar, rodar no console o bundle Install

# Instalação do Capybara Framework = Capybara é uma ferramenta de teste de integração para aplicativos da web baseados em rack. Simula como um usuário interagiria com um site
gem "capybara", "3.33"

# Instalação Selenium Webdriver = WebDriver é uma ferramenta para escrever testes automatizados de sites. Tem como objetivo imitar o comportamento de um usuário real e, como tal, interage com o HTML da aplicação.
gem "selenium-webdriver", "3.142.7"

# Instalação rspec Framework = Para ajudar nos testes (Ex: Expect.to) BDD for Ruby
gem "rspec", "3.10"

# Instalação Httparty = Consumir API Torna o http divertido! Além disso, torna o consumo de serviços da Web repousantes extremamente fácil.
gem "httparty", "0.18.1"

# Instalação Cucumber = Desenvolvimento baseado em comportamento com elegância e alegria. Após instalar, rodar no console o comando: cucumber --init para iniciar o projeto
gem "cucumber", "5.2"

# Instalação Rufo = Formatador de código Ruby rápido e discreto
gem "rufo", "0.12.0"

# Instalação Allure Cucumber = Adaptador do cucumber para geração de relatórios do Allure
gem "allure-cucumber", "2.13.6.4"
